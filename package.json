{
  "name": "miurd",
  "version": "1.0.0",
  "description": "A Discord bot that responds to specific messages.",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "deploy": "tsx src/deploy-commands.ts --reset",
    "reset": "tsx src/deploy-commands.ts --reset-global",
    "lint": "pnpm biome lint --apply ./src",
    "format": "pnpm biome format --write ./src"
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "@google/generative-ai": "^0.24.1",
    "discord.js": "^14.0.0",
    "dotenv": "^10.0.0",
    "ffmpeg-static": "^5.2.0",
    "libsodium-wrappers": "^0.7.15",
    "node-cron": "^4.1.0",
    "opusscript": "^0.1.1",
    "prism-media": "^1.3.5",
    "tsx": "^4.19.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.24.0",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "typescript": "^4.5.0",
    "typescript-eslint": "^8.29.1"
  }
}